{
    "name": "justdone-authorization",
    "version": "1.0.0",
    "description": "Backend environment",
    "author": "Felix Le <felix@namtech.com.au>",
    "scripts": {
        "watch": "./node_modules/.bin/grunt",
        "eslint": "./node_modules/.bin/eslint --ext .ts --ext .js ./src",
        "drop-db": "mongo justdone_development --eval 'db.dropDatabase();' && mongo justdone_staging --eval 'db.dropDatabase();'",
        "test": "NODE_ENV=Development ./node_modules/.bin/mocha --exit ./node_modules/ts-node/register ./src/test/**/*.ts",
        "build": "./node_modules/.bin/grunt build",
        "start": "./node_modules/.bin/grunt build && NODE_ENV=Development node ./dest/server.js",
        "development": "NODE_ENV=Development node ./dest/server.js",
        "staging": "NODE_ENV=Staging node ./dest/server.js",
        "production": "NODE_ENV=Production node ./dest/server.js"
    },
    "dependencies": {
        "body-parser": "^1.18.3",
        "cron": "^1.3.0",
        "crypto": "^1.0.1",
        "debug": "^3.1.0",
        "ejs": "^2.6.1",
        "email-existence": "^0.1.6",
        "express": "^4.16.3",
        "justdone-system-package": "git+ssh://git@bitbucket.org/namtech/justdone-system-package.git#dev",
        "mongoose": "^5.1.3",
        "morgan": "^1.9.0",
        "nedb": "^1.8.0",
        "node-schedule": "^1.3.0",
        "nodemailer": "^4.6.5",
        "request-promise": "^4.2.2",
        "validator": "^10.2.0"
    },
    "devDependencies": {
        "@types/body-parser": "^1.17.0",
        "@types/chai": "^4.1.3",
        "@types/express": "^4.11.1",
        "@types/mocha": "^5.2.0",
        "@types/mongoose": "^5.0.15",
        "@types/morgan": "^1.7.35",
        "@types/node": "^10.3.0",
        "@types/nodemailer": "^4.6.0",
        "babel-eslint": "^8.2.3",
        "chai": "^4.1.2",
        "eslint-config-google": "^0.9.1",
        "eslint-config-standard": "^11.0.0",
        "eslint-plugin-import": "^2.12.0",
        "eslint-plugin-node": "^6.0.1",
        "eslint-plugin-promise": "^3.8.0",
        "eslint-plugin-standard": "^3.1.0",
        "eslint-plugin-typescript": "^0.12.0",
        "grunt": "^1.0.2",
        "grunt-contrib-watch": "^1.1.0",
        "grunt-exec": "^3.0.0",
        "grunt-sync": "^0.8.0",
        "mocha": "^5.2.0",
        "mockgoose": "^7.3.5",
        "ts-node": "^6.0.5",
        "typescript": "^3.3.4000"
    }
}
